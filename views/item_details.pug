extends layout

block content
  h1= title

  h2 Product name: #{item.name}
  p Category: 
    a(href=category.url) #{item.category}
    p In stock: #{item.in_stock}
    p Price: #{item.price} $
    p Description: #{item.description}
  a(href=item.url+'/delete') Delete item
  br
  a(href=item.url+'/update') Update item